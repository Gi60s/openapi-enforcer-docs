.page {
  .code-switcher {
    position: relative;

    .tab-header {
      position: relative;
      z-index: 1;
      background-color: #000;
      color: #CCC;
      border-radius: 6px 6px 0 0;
      border-bottom: 1px solid #444;

      > ul {
        margin-bottom: 0;
        text-align: left;
        padding-top: 3px;
        padding-left: 10px;

        li {
          border: none;
          border-radius: 4px 4px 0 0;
          padding: 0 15px;
          margin: 0;
          line-height: 2em;

          &.active {
            color: #FFF
            background-color: #282C34;
            border: 1px solid #444;
            border-bottom-color: #232C34;
            padding-bottom: 1px;
            margin-bottom: -1px;
          }
        }
      }
    }

    .tab-content {
      position: relative;
      z-index: 0;

      > div {
        border-radius: 0 0 6px 6px;
      }

      pre {
        margin-top: 0;
        border-radius: 0 0 6px 6px;
      }
    }
  }
}
